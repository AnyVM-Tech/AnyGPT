{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "ESNext",
	  "outDir": "./dist",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "baseUrl": ".", 
	  "paths": { 
		"*": ["*", "./node_modules/*"]
	  },
	  "moduleResolution": "bundler", 
	  "resolveJsonModule": true, 
	  "allowSyntheticDefaultImports": true,
	  "noEmit": false,
	  "declaration": true,
	  "emitDeclarationOnly": false,
	  "noEmitOnError": false
	},
	"include": ["./**/*"], 
	"exclude": ["node_modules", "dev/tps.ts", "dist"]
  }